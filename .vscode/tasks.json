{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Type-check userscript",
      "type": "shell",
      "command": [
        "yarn",
        "typecheck:all"
      ],
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "Build+watch userscript",
      "type": "shell",
      "command": [
        "yarn",
        "userscript:watch"
      ],
      "problemMatcher": [
        // See: https://marketplace.visualstudio.com/items?itemName=eamodio.tsl-problem-matcher
        "$ts-webpack-watch"
      ]
    }
  ]
}
